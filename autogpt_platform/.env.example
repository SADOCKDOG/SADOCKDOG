# AutoGPT Platform root .env.example
# Copia este archivo a .env y sustituye valores.
# NUNCA uses claves reales en ejemplo; rota todo antes de producción.

# --- Core Secrets (genera valores únicos) ---
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD_LONG
JWT_SECRET=CHANGE_ME_JWT_SECRET_AT_LEAST_32_CHARS
ANON_KEY=PLACEHOLDER_ANON_KEY
SERVICE_ROLE_KEY=PLACEHOLDER_SERVICE_ROLE_KEY
DASHBOARD_USERNAME=supabase
DASHBOARD_PASSWORD=CHANGE_ME_DASHBOARD_PASSWORD
SECRET_KEY_BASE=CHANGE_ME_SECRET_KEY_BASE_64
VAULT_ENC_KEY=CHANGE_ME_VAULT_KEY_32_CHARS

# --- Database ---
POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# --- Supavisor Pooler ---
POOLER_PROXY_PORT_TRANSACTION=6543
POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_TENANT_ID=tenant-local

# --- Kong Ports ---
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# --- PostgREST ---
PGRST_DB_SCHEMAS=public,storage,graphql_public

# --- Auth (GoTrue) ---
SITE_URL=http://127.0.0.1:3000
API_EXTERNAL_URL=http://127.0.0.1:8000
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=false
ENABLE_ANONYMOUS_USERS=false

# --- Mailer (solo desarrollo) ---
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=supabase-mail
SMTP_PORT=2500
SMTP_USER=fake_mail_user
SMTP_PASS=fake_mail_password
SMTP_SENDER_NAME=local_sender

# --- GitHub OAuth (GoTrue) ---
GOTRUE_EXTERNAL_GITHUB_ENABLED=true
GOTRUE_EXTERNAL_GITHUB_CLIENT_ID=CHANGE_ME_GITHUB_CLIENT_ID
GOTRUE_EXTERNAL_GITHUB_SECRET=CHANGE_ME_GITHUB_CLIENT_SECRET
GOTRUE_EXTERNAL_GITHUB_REDIRECT_URI=http://127.0.0.1:8000/auth/v1/callback
GOTRUE_SITE_URL=http://127.0.0.1:3000
GOTRUE_URI_ALLOW_LIST=http://127.0.0.1:3000/*,http://127.0.0.1:8000/*
GOTRUE_API_EXTERNAL_URL=http://127.0.0.1:8000
GOTRUE_SECURITY_MANUAL_LINKING_ENABLED=true

# --- OpenAI (opcional) ---
OPENAI_API_KEY=

# --- Vector / Logs demo ---
LOGFLARE_LOGGER_BACKEND_API_KEY=PLACEHOLDER_LOGFLARE
LOGFLARE_API_KEY=PLACEHOLDER_LOGFLARE
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

# --- Imgproxy ---
IMGPROXY_ENABLE_WEBP_DETECTION=true

# --- Functions ---
FUNCTIONS_VERIFY_JWT=false

# NOTA: Ajusta dominios si usas otro host en lugar de 127.0.0.1.
